{% trans_default_domain 'FOSUserBundle' %}


<title> Profil</title>
<div class="page-banner-area" style="background-image: url(/Sites/GestionPFE/web/Client/img/page-banner/page-banner.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-content">
                    <!-- Section Title -->
                    <div class="section-title alt-sec-title">
                        <h2>Bienvenu {{ app.user.username }}</h2>
                        <p>Details de votre Profil</p>
                    </div>
                    <!-- Page breadcrumb -->
                    <div class="page-breadcrumb">
                        <ul>
                            <li><a href="{{ path('gestion_pfe_homepage') }}">Acceuil</a></li>
                            <li><a class="not-active" >Profil</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div><!-- // End Page banner area -->
<div class="professors-area section-padding professors-detail">
    <div class="container">
        <div class="row">
            <!-- Singel professors -->
            <div class="col-md-12">
                <div class="single-professors-two">
                    <div class="row">
                        <div class="col-md-4 col-sm-5">
                            <div class="professors-two-img">
                                <img src="{{ asset('uploads/user/')~app.user.image }}" alt="">
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-5">

                            {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
                            <div class="professors-two-content">

                                <div class="form-group">
                                   Nom utilisateur : {{ form_widget(form.username,{'attr':{'class':'form-control','placeholder':'Votre nom utilisateur'}}) }}
                                </div>
                                <div class="form-group">
                                   Email: {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Votre Email'}}) }}
                                </div>

                                <div class="form-group">
                                   Mot de passe : {{ form_widget(form.current_password,{'attr':{'class':'form-control','placeholder':'Votre mot de passe'}}) }}
                                </div>


                            </div>
                             <div class="mes-btn">
                               <button type="submit" class="theme-btn hvr-shutter-in-horizontal" >Enregistrer</button>

                             </div>
                        {{ form_end(form) }}
                            <button  class="theme-btn hvr-shutter-in-horizontal" style="float: right" aria-label="Retour">
                                <a href="{{ path('gestion_pfe_homepage') }}">
                                    <i class="fa fa-graduation-cap"></i> </a>
                            </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 <!-- // End Professors area -->


