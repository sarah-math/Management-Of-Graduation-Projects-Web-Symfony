{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


{% block body %}
    <!-- Registration page -->

    <div class="page-registration section-padding"  style="background-image:url(/Sites/GestionPFE/web/Client/img/backgrounds/registration.jpg ">

        <div class="container">
            <div class="row">
                <div class="col-md-4">

                </div>

                <div class="col-md-4">
                    <div class="sign-in-area">
                        <h3>Sign in</h3>
                        <!-- sign in form -->
                        <form action="{{ path("fos_user_security_check") }}" method="post">
                            {% if csrf_token %}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            {% endif %}
                            <div class="form-group">
                                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" id="login_user_name"  placeholder="User Or Email" />
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Password"  id="password" name="_password" required="required" id="login_password" />

                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <button class="theme-btn hvr-shutter-in-horizontal" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}">Sign in</button>
                                    </div>
                                    <div class="col-sm-4 no-padding">
                                        <span>
                                            <input type="checkbox"> remember me
                                        </span>
                                    </div>
                                    <div class="col-sm-4 no-padding">
                                        <a class="lfc_forget_pass" href="{{ path('fos_user_resetting_request') }}">Forgot Password ?</a>
                                    </div>
                                </div>
                            </div>
                        </form><!-- // End sign in form -->
                    </div>
                </div>

            </div>
        </div>
    </div><!-- // End Registration page -->
    <!-- Social area -->
    <!-- Main footer area -->
{% endblock body %}