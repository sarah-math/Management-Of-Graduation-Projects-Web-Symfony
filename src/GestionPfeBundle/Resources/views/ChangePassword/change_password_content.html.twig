{% trans_default_domain 'FOSUserBundle' %}




<title>Profil</title>
<div class="page-banner-area" style="background-image: url(/Sites/GestionPFE/web/Client/img/page-banner/page-banner.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-content">
                    <!-- Section Title -->
                    <div class="section-title alt-sec-title">
                        <div class="section-title alt-sec-title">
                            <h2>Bienvenu {{ app.user.username }}</h2>
                            <p>Modifier Votre mot de passe </p>
                        </div>
                    </div>
                    <!-- Page breadcrumb -->
                    <div class="page-breadcrumb">
                        <ul>
                            <li><a href="{{ path('gestion_pfe_homepage') }}">Acceuil</a></li>
                            <li><a class="not-active" >Profil</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div><!-- // End Page banner area -->
<div class="professors-area section-padding professors-detail">
    <div class="container">
        <div class="row">
            <!-- Singel professors -->
            <div class="col-md-12">
                <div class="single-professors-two">
                    <div class="row">
                        <div class="col-md-4 col-sm-5">
                            <div class="professors-two-img">
                                <img src="{{ asset('uploads/user/')~app.user.image }}" alt="">
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-5">
                            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                            <div class="professors-two-content">

                                </div>
                                <div class="form-group">
                                    <div style="color:#f10e0e;">
                                       <strong> {{ form_errors(form.plainPassword.first) }}
                                        {{ form_errors(form.plainPassword.second) }}</strong>
                                    </div>
                                    <div class="form-group">


                                       {{ form_widget(form.current_password,{'attr':{'class':'form-control','placeholder':'Mot de passe actuelle'}}) }}
                                    </div>
                                    <div class="form-group">
                                         {{ form_widget(form.plainPassword.first,{'attr':{'class':'form-control','placeholder':'nouveau mot de passe'}}) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control','placeholder':' Confirmer mot de passe '}}) }}
                                    </div>



                            <div class="mes-btn">
                                <button type="submit" class="theme-btn hvr-shutter-in-horizontal" >Enregistrer</button>
                                <button  class="theme-btn hvr-shutter-in-horizontal" style="float: right" aria-label="Retour">
                                    <a href="{{ path('gestion_pfe_homepage') }}">
                                        <i class="fa fa-graduation-cap"></i> </a>
                                </button>
                            </div>


                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div> <!-- // End Professors area -->


